extends base.pug

block style
      style
        include ../static/style.css
        include ../static/contactStyle.css

block content
    div.container
        h2 Contact us 
        form(action="/contact" method="post" , class="formClass")
            input(type="(text)" name="name" class="myInput" placeholder="Enter your name")
            input(type="(text)" name="phone" class="myInput" placeholder="Enter your phone")
            input(type="(text)" name="email" class="myInput" placeholder="Enter your email")
            input(type="(text)" name="address" class="myInput" placeholder="Enter your address")
            input(type="(text)" name="desx" class="myInput" placeholder="Enter your description")
            button(type="submit" class="btn")
